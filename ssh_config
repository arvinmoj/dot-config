# SSH Configuration Template
# Copy this file to ~/.ssh/config and customize as needed

# Global defaults
Host *
    # Keep connections alive
    ServerAliveInterval 60
    ServerAliveCountMax 3
    
    # Connection sharing for faster subsequent connections
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h-%p
    ControlPersist 600
    
    # Use agent forwarding carefully (disabled by default)
    ForwardAgent no
    
    # Compression
    Compression yes

# Example host configuration
# Host myserver
#     HostName server.example.com
#     User username
#     Port 22
#     IdentityFile ~/.ssh/id_rsa

# GitHub configuration
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa

# GitLab configuration  
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_rsa
